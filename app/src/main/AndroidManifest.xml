<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yanwu.androidexercise">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature android:name="android.hardware.location" />
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BasicElementsCatagoryActivity"
            android:label="@string/activity_basic_elements_title"
            android:screenOrientation="portrait" />
        <activity android:name=".RxJavaCategoryActivity"
            android:label="@string/activity_rxjava_category_title"
            android:screenOrientation="portrait" />
        <activity android:name=".TextViewActivity"
            android:label="@string/activity_text_view_title"
            android:screenOrientation="portrait" />
        <activity android:name=".EditTextActivity"
            android:label="@string/activity_edit_text_title"
            android:screenOrientation="portrait" />
        <activity android:name=".ViewFlipperActivity"
            android:label="@string/activity_view_flipper_title"
            android:screenOrientation="portrait" />
        <activity android:name=".SearchViewActivity"
            android:label="@string/activity_search_view_title"
            android:screenOrientation="portrait" />
        <activity android:name=".RxJava2Activity"
            android:label="@string/activity_rxjava2_title"
            android:screenOrientation="portrait"/>
        <activity android:name=".RxErrorHandlingActivity"
            android:label="@string/activity_rx_error_handling_title"
            android:screenOrientation="portrait"/>
        <activity android:name=".RxComposeActivity"
            android:label="@string/activity_rx_compose_title"
            android:screenOrientation="portrait"/>
        <activity android:name=".RxWorkflowActivity"
            android:label="@string/activity_rx_workflow_title"
            android:screenOrientation="portrait"/>
        <activity android:name=".BleActivity"
            android:label="@string/activity_ble_title"
            android:screenOrientation="portrait"/>
        <activity android:name=".ProgressBarActivity"
            android:label="@string/activity_progress_bar_title"
            android:screenOrientation="portrait"/>
        <activity android:name=".SpinnerActivity"
            android:label="@string/activity_spinner_title"
            android:screenOrientation="portrait"/>
        <activity android:name=".MPChartActivity"
            android:label="@string/activity_mpchart_title"
            android:screenOrientation="portrait"/>
        <activity android:name=".RecyclerviewActivity"
            android:label="@string/activity_recyclerview_title"
            android:screenOrientation="portrait"/>
    </application>

</manifest>